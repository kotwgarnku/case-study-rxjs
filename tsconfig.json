{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": ["es2015", "es2016", "es2017"]
  }
}
